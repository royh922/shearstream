<hydro>
iso_sound_speed = 1.0
gamma           = 1.6666667    # gamma = C_p/C_v

<problem>			# Using CGS units, length in kpc, time in Myr
iprob=1                		# Default parameter values correspond to Re=10^5
n_e  = 1.e-4			# in cm^-3, per Sun, M et al. (2010). Electron number density of hot, diffuse gas
density_contrast = 100.0        # 100 is the physical contrast between n_Halpha (0.1 cm^-3) and n_ICM (10^-3)
pgas_0 = 1.380649e-14		# in ergs/cm^3. Ensures temp. in diffuse region to be 10^6 K
